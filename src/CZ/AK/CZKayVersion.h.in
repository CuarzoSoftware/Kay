#ifndef CZ_KAYVERSION_H
#define CZ_KAYVERSION_H

#define CZ_KAY_VERSION_MAJOR @VERSION_MAJOR@
#define CZ_KAY_VERSION_MINOR @VERSION_MINOR@
#define CZ_KAY_VERSION_PATCH @VERSION_PATCH@

// Pack into a 64-bit version integer (Major:32 | Minor:16 | Patch:16)
#define CZ_KAY_VERSION \
    ((static_cast<uint64_t>(CZ_KAY_VERSION_MAJOR) << 32) | \
     (static_cast<uint64_t>(CZ_KAY_VERSION_MINOR) << 16) | \
     (static_cast<uint64_t>(CZ_KAY_VERSION_PATCH)))

#endif // CZ_KAYVERSION_H
